---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import {ViewTransitions} from 'astro:transitions';
import MainLayout from "./Main.astro";

type Props = CollectionEntry<'blog'>['data'];

const { title, subtitle, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<MainLayout title={title} subtitle={subtitle} description={description} image={heroImage}>
	<article>
		{ heroImage && (
			<div class="hero-image">
				{<img src={heroImage} alt="Header image " />}
			</div>
		)}
		<small class="date">
			{
				pubDate && (
					<>Published: <FormattedDate date={pubDate} /></>
				)
			}
			{
				updatedDate && (
					<>â€” Updated: <FormattedDate date={updatedDate} /></>
				)
			}
		</small>
		<slot />
	</article>
</MainLayout>
