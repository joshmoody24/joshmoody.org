---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Layout from '../layouts/Main.astro';
---

<Layout
	title="Home"
	description="Josh Moody's homepage"
>
	<section>
		<p>
			I've been passionate about tech since forever. I've been making web apps, video games, and digital art since I was a young lad.
		</p>
		<p>
			I currently work at <a href="https://www.getredo.com/">Redo</a>.
		</p>
		<p>
			This website is a hub for all my websites and projects.
		</p>
	</section>
	<section>
  <img
      src="/josh/josh-moody-1280.jpg"
      srcset="/josh/josh-moody-1280.jpg 1280w, /josh/josh-moody-640.jpg 640w, /josh/josh-moody-320.jpg 320w"
      sizes="(min-width: 620px) 620px, 100vw"
      alt="Josh Moody: the man, the myth, the legend" />
	</section>
</Layout>
