---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import Layout from '../../layouts/Main.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<style>
.blog-post header {
  padding: 0;
  margin-bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
  width: 100%;
}

.blog-post header time {
  margin: 0;
  text-align: right;
  white-space: nowrap;
}

.blog-post {
  border: var(--border-width) solid var(--color-border);
  overflow: hidden;
  background-color: var(--color-background);
  display: flex;
  flex-direction: column;
}

.blog-post .description {
  line-height: 1.5;
  margin-top: var(--spacing-sm);
  margin-bottom: 0;
  color: var(--color-text-secondary);
  text-align: left;
  width: 100%;
}

.blog-post a {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 0;
}

.blog-post .image-container {
  width: 100%;
  overflow: hidden;
  background-color: rgba(0, 0, 0, 0.02);
  border-bottom: var(--border-width) solid var(--color-border);
  display: block;
}

.blog-post img {
  width: 100%;
  height: auto;
  display: block;
}

.blog-post .content {
  padding: var(--spacing-md);
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}

.blog-post .content > div {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  width: 100%;
  margin-bottom: var(--spacing-xs);
}

@media (prefers-color-scheme: dark) {
  .blog-post .image-container {
    background-color: rgba(255, 255, 255, 0.03);
  }
}

@media (max-width: 480px) {
  .blog-post .content > div {
    flex-direction: column;
    align-items: flex-start;
  }

  time.date {
    text-align: left;
    margin-top: var(--spacing-xs);
  }
}
</style>

<Layout
	title="Blog"
	description="A collection of Josh Moody's technical blog posts."
>
	<section>
		<ul class="posts">
			{
				posts
				.filter(p => p.data.pubDate < new Date())
				.sort((a,b) => a.data.pubDate < b.data.pubDate ? 1 : -1)
				.map((post) => (
					<li>
						<article class="blog-post">
							<a href={`/blog/${post.slug}/`}>
                {post.data.heroImage && (
                  <div class="image-container">
                    <img src={post.data.heroImage} alt={`Header image for blog post "${post.data.title}"`} />
                  </div>
                )}
								<div class="content">
									<header>
										<h2 class="title">{post.data.title}</h2>
										<time datetime={post.data.pubDate.toISOString()} class="date">
											<FormattedDate date={post.data.pubDate} />
										</time>
									</header>
									<p class="description">{post.data.description}</p>
								</div>
							</a>
						</article>
					</li>
				))
			}
		</ul>
	</section>
</Layout>
